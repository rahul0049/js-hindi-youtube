const myArr=[0,1,2,3,4] // no need to have same type of element 
// resizable
console.log(myArr[0])// 0 based indexing 

// they make shallow copy ( same reference ) while copying 

const myHeros=["shaktiman","naagraj"]
const myArr2=new Array(1,2,3,4)

// Array methods
myArr.push(6)
myArr.pop()
myArr.unshift(9) // inserted at starting of the array
myArr.shift() // remove the zeroth index
console.log(myArr.includes(9))
console.log(myArr.indexOf(9))
const newArr=myArr.join()
console.log(myArr) // it's type is array
console.log(newArr) // it is string 


//slice , splice
console.log("A",myArr)
const myn1=myArr.slice(1,3) // 3rd is not included
console.log(myn1)
console.log("B",myArr)// array is not changed

const myn2=myArr.splice(1,3) // 3 is included
console.log(myn2)
console.log("C",myArr) // original array changed i.e. myn2 is removed from myArr
